    "path-intellisense.autoSlashAfterDirectory": true,
    "path-intellisense.extensionOnImport": true,
  
    // ğŸŒ¿ DotENV file support
    "files.associations": {
      ".env*": "dotenv"
    },
  
    // ğŸ Python path for autocomplete (direnv aware)
    "python.pythonPath": "${workspaceFolder}/.direnv/python*/bin/python",
    "python.analysis.extraPaths": ["./", "./bin"],
  
    // ğŸ–¥ï¸ Terminal: bigger scrollback for longer logs
    "terminal.integrated.scrollback": 5000
  }
  