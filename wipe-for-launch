#!/usr/bin/env bash
#!/bin/bash
set -e

DB_NAME="aoe2db"
DB_USER="aoe2user"
BACKUP_FILE="aoe2db_backup_$(date +%Y%m%d_%H%M%S).sql"

echo "üì¶ Backing up current DB to $BACKUP_FILE..."
sudo -u postgres pg_dump -U postgres "$DB_NAME" > "$BACKUP_FILE"
echo "‚úÖ Backup complete."

echo "‚ö†Ô∏è Truncating all tables..."
sudo -u postgres psql -d "$DB_NAME" -c "TRUNCATE TABLE users, game_stats RESTART IDENTITY CASCADE;"
echo "‚úÖ Tables truncated and sequences reset."

echo "üéØ Schema now clean and ready for production launch."
