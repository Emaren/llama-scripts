#!/usr/bin/env bash
#!/bin/bash
set -e
source .env.dbs

target="$1"
export PYTHONPATH=$(pwd)  # Ensures `db/` is importable

case "$target" in
  render)
    echo "ğŸ”¼ Applying migration to RENDER..."
    alembic -x "db_url=$RENDER_DB_URI" upgrade head
    echo "ğŸ” Re-syncing schema and data to RENDER..."
    ./scripts/sync_schema.sh
    ./scripts/sync_data.sh
    ;;
  local)
    echo "ğŸ”¼ Applying migration to LOCAL..."
    alembic -x "db_url=$LOCAL_DB_URI" upgrade head
    echo "ğŸ” Re-syncing schema and data to LOCAL..."
    ./scripts/sync_schema.sh
    ./scripts/sync_data.sh
    ;;
  *)
    echo "âŒ Usage: ./scripts/migrate.sh [local|render]"
    exit 1
    ;;
esac
